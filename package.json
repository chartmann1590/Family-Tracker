{
  "name": "family-tracker",
  "version": "1.0.0",
  "description": "Self-hosted family tracking app with OwnTracks integration",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces",
    "copy-apk": "node scripts/copy-apk.js",
    "apk:build": "cd mobile_app && flutter build apk --release",
    "apk:build-and-copy": "npm run apk:build && npm run copy-apk",
    "docker:build": "docker-compose build",
    "docker:build:with-apk": "npm run copy-apk && docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
